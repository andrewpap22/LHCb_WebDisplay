    "@angular/platform-browser": "~12.1.0",
    "@angular/platform-browser-dynamic": "~12.1.0",
    "@angular/router": "~12.1.0",
    "file-saver": "^2.0.5",
    "phoenix-event-display": "^2.2.0",
    "phoenix-ui-components": "^2.2.0",
    "rxjs": "~6.6.0",
    "three": "^0.131.3",
    "tslib": "^2.2.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.1.0",
